{
  "extends": ["../../.eslintrc"],
  "rules": {
    "no-console": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "react/state-in-constructor": "off",
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "spaced-comment": [
      "error", "always",
      {
        "markers": ["/"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "directory": "./packages/web/"
      }
    }
  }
}
