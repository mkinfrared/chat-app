{
  "extends": ["../../.eslintrc"],
  "rules": {
    "no-console": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "spaced-comment": [
      "error", "always",
      {
        "markers": ["/"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      // use <root>/tsconfig.json
      "typescript": {
        "directory": "./packages/web/"
      }
    }
  }
}
